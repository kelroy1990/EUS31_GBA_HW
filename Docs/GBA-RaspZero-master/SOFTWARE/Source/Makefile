#EXECS = retrogame gamera
EXECS = retrogame
CC    = gcc $(CFLAGS) -Wall -Ofast -fomit-frame-pointer -funroll-loops -lwiringPi -lpthread -s

all: $(EXECS)

retrogame: retrogame.c
	$(CC) $< -o $@
	strip $@

gamera: gamera.c
	$(CC) $< -lncurses -lmenu -lexpat -o $@
	strip $@

install:
	mv $(EXECS) /usr/local/bin

clean:
	rm -f $(EXECS)
